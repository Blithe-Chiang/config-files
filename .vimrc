set encoding=utf-8
set number
set nocompatible
syntax on
set ruler
colorscheme desert

" whitespace
set wrap
" set textwidth=79
set tabstop=4
set shiftwidth=4
set softtabstop=4
set expandtab
set noshiftround
set smarttab

" auto indent
set autoindent

" cusor motion
set scrolloff=3

" last line
set showmode
set showcmd


" searching
set hlsearch

" remap kj to escape in insert mode
inoremap kj <Esc>
inoremap jk <Esc>

" remap <Space>hjkl to direction in insert mode
"inoremap zh <Left>
"inoremap zj <Down>
"inoremap zk <Up>
"inoremap zl <Right>


" remap <C-jk> to <Left> <Right> in insert mode
"inoremap <C-j> <Left>
"inoremap <C-k> <Right>

